<div class="container">
<h1 class="text-center"><%= @cocktail.name %></h1>
<h2>Ingredients</h2>
<ul>
<% @cocktail.doses.each do |dose| %>
  <li><%= dose.description %> de <%= Ingredient.find(dose.ingredient_id).name %></li>
<% end %>
</ul>
<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.input :description %>
  <%= f.association :ingredient %>
  <%=  f.submit "Add ingredient", class: "btn btn-primary" %>
<% end %>

<%= link_to 'Back to cocktail list', cocktails_path %>
</div>
